/* str_capitalizer */

#include <unistd.h>

int main(int argc, char **argv)
{
    int i = 0;
    int capitalize = 1; // Start by capitalizing the first letter

    if (argc > 1)
    {
        while (argv[1][i])
        {
            if (argv[1][i] >= 'A' && argv[1][i] <= 'Z')
                argv[1][i] = argv[1][i] + 32; // Convert to lowercase
            if (argv[1][i] >= 'a' && argv[1][i] <= 'z' && capitalize)
            {
                argv[1][i] = argv[1][i] - 32; // Convert to uppercase
                capitalize = 0;             // Don't capitalize next letter
            }
            if (argv[1][i] == ' ' || argv[1][i] == '\t')
                capitalize = 1; // Capitalize after space or tab
            write(1, &argv[1][i], 1);
            i++;
        }
    }
    write(1, "\n", 1);
    return (0);
}
